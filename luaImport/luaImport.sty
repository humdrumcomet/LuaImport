\ProvidesPackage{luaImport}
\RequirePackage{luacode}
\RequirePackage{luaHelper}

% Create Functions for simplifying glossary, equation, and asset creation
\directlua{
    local sourcefile = kpse.find_file('luaImport.sty')
    local packagePath = string.match(sourcefile, '(.*/)')
    import = require (packagePath..'luaImport')
}
\newcommand\newGl[3][gls]{
    \directlua{newGl([[#1]], [[#2]], \unexpanded{[[#3]]})}
}
\newcommand\newGlFromTable[3][gls]{
    \directlua{newGlFromTable([[#1]], [[#2]], \unexpanded{[[#3]]})}
}
\newcommand\newEqt[3][equation]{
    \directlua{newEqt([[#1]], [[#2]], \unexpanded{[[#3]]})}
}
\newcommand\newEqtFromTable[3][equation]{
    \directlua{newEqtFromTable([[#1]], [[#2]], \unexpanded{[[#3]]})}
}
\newcommand\newFig[3][reg]{
    \directlua{newFig([[#1]], [[#2]], \unexpanded{[[#3]]})}
}
\newcommand\insertEqt[2][empty]{
    \directlua{insertEqtFromTable([[#2]], [[#1]])}
}
\newcommand\insertFig[1]{
    \directlua{insertFigFromTable([[#1]])}
}
